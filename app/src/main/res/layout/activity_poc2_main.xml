<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/window"
    android:padding="@dimen/padding_window">

    <LinearLayout
        android:id="@+id/linOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:onClick="onShareDebugLogs"
            android:text="Share Debug Logs"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="onSwitch2AboutPage"
            android:shadowColor="#B0B0B0"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:text="@string/app_name"
            android:textColor="#E2E2D0"
            android:textSize="32sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/padding_default"
            android:layout_marginBottom="@dimen/padding_default">

            <ImageButton
                android:id="@+id/btnBack"
                style="@style/toolButton"
                android:layout_marginLeft="@dimen/padding_default"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:onClick="onSwitch2DefaultPage"
                android:src="@drawable/back" />

            <ImageButton
                android:id="@+id/btnCopy"
                style="@style/toolButton"
                android:layout_marginLeft="@dimen/padding_default"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:onClick="onCopyPageContent"
                android:src="@drawable/copy" />

            <!--        <ImageButton-->
            <!--            android:id="@+id/btnShare"-->
            <!--            style="@style/toolButton"-->
            <!--            android:layout_marginLeft="@dimen/padding_default"-->
            <!--            android:layout_weight="1"-->
            <!--            android:contentDescription="@null"-->
            <!--            android:onClick="onSharePageContent"-->
            <!--            android:src="@drawable/selector_share" />-->

            <ImageButton
                android:id="@+id/btnReset"
                style="@style/toolButton"
                android:layout_marginLeft="@dimen/padding_default"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:onClick="onSwitch2DefaultPage"
                android:src="@drawable/reset" />

        </LinearLayout>
    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linOption"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/padding_default"
        android:animateFirstView="true"
        android:background="@null"
        android:inAnimation="@anim/fade_in"
        android:outAnimation="@anim/fade_out">

        <ScrollView style="@style/textBoard">

            <TextView style="@style/textArea" />
        </ScrollView>

        <ScrollView style="@style/textBoard">

            <TextView style="@style/textArea" />
        </ScrollView>
    </ViewSwitcher>

</RelativeLayout>